#include <iostream>
using namespace std;
int main()
{
	int x1, y1, x2, y2;
	double p, p1;
	cout << "Vvedite koordinaty x1,y1,x2,y2";
	cin >> x1;
	cin >> y1;
	cin >> x2;
	cin >> y2;
	p= 2 * (abs(x2 - x1) + abs(y2 - y1));
	p1= abs(x2 - x1) * abs(y2 - y1);
	cout << p1;
	cout << " ";
	cout << p ;
    return 0;
}
